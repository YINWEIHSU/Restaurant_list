<!-- search bar -->
<div class="container search-bar">
  <div class="search-bar-outer">
    <div class="search-bar-inner">
      <form action="/search">
        <h4 class="mb-2">尋找餐廳：</h4>
        <div class="input-group">
          <input type="text" name="keyword" class="form-control search-bar" placeholder="輸入餐廳、分類"
            aria-label="Restaurant Name..." value="{{keyword}}" aria-describedby="search-button">
          <div class="input-group-append">
            <button class="btn btn-major" type="submit" id="search-button"><i class="fas fa-search"></i></button>
          </div>
        </div>
      </form>
    </div>
  </div>
</div>

<!-- restaurant list -->
<div class="container mt-5">
  <div class="d-flex justify-content-between my-5 mx-3">
    <form action="/" method="GET">
      <select class="form-select" aria-label="Default select example" name="sort" onchange="this.form.submit()">
        <option selected disabled>選擇排序方式</option>
        <option value="name">A → Z</option>
        <option value="nameDesc">Z → A</option>
        <option value="category">類別</option>
        <option value="location">地區</option>
      </select>
   </form>
    <a href="./restaurants/new"><i class="fas fa-plus"></i> Add new restaurant for「{{keyword}}」</a>
  </div>
  <div class="container mt-5 d-flex justify-content-center">
    <h5>找不到與「{{keyword}}」有關的結果，請重新輸入</h3>
  </div>
</div>